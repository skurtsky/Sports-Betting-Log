@model SportsBettingTracker.Models.SportLeague

@{
    ViewData["Title"] = "Delete Sport/League";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_SettingsNav" />
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete this sport/league?</h5>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Deleting this league may affect existing bets.
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
                    </dl>
                    
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <form asp-action="DeleteLeague">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
