@{
    ViewData["Title"] = "General Settings";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_SettingsNav" />
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h4 class="mb-3">Application Settings</h4>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Appearance</h5>
                                <p class="text-muted mb-0">Customize application appearance</p>
                            </div>
                            <span class="badge bg-secondary">Coming Soon</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Notifications</h5>
                                <p class="text-muted mb-0">Manage notification preferences</p>
                            </div>
                            <span class="badge bg-secondary">Coming Soon</span>
                        </div>
                    </div>
                    
                    <h4 class="mb-3 mt-5">Additional Settings</h4>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Data Export</h5>
                                <p class="text-muted mb-0">Export all your data</p>
                            </div>
                            <span class="badge bg-secondary">Coming Soon</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">API Access</h5>
                                <p class="text-muted mb-0">Manage API keys and permissions</p>
                            </div>
                            <span class="badge bg-secondary">Coming Soon</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Bet Settings</h5>
                                <p class="text-muted mb-0">Manage sport leagues and bet types</p>
                            </div>
                            <a asp-controller="BetSettings" asp-action="Index" class="btn btn-sm btn-outline-primary">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
