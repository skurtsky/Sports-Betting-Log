@{
    ViewData["Title"] = "General Settings";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_SettingsNav" />
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h4 class="mb-3">Application Settings</h4>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Sport Leagues</h5>
                                <p class="text-muted mb-0">Manage available sport leagues</p>
                            </div>
                            <a asp-controller="SportLeagues" asp-action="Index" class="btn btn-sm btn-outline-primary">Manage</a>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">Bet Types</h5>
                                <p class="text-muted mb-0">Manage available bet types</p>
                            </div>
                            <a asp-controller="BetTypes" asp-action="Index" class="btn btn-sm btn-outline-primary">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
