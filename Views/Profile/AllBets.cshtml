@model PaginatedList<SportsBettingTracker.Models.Bet>
@using SportsBettingTracker.Models
@{
    var profileUser = ViewData["ProfileUser"] as ApplicationUser;
    ViewData["Title"] = profileUser?.DisplayName + "'s Public Bets";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Match</th>
                <th>Selection</th>
                <th>Odds</th>
                <th>Result</th>
                <th>Profit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bet in Model)
            {
                <tr>
                    <td>@bet.BetDate.ToString("yyyy-MM-dd")</td>
                    <td>@bet.Match</td>
                    <td>@bet.BetSelection</td>
                    <td>@bet.FormattedOdds</td>
                    <td>
                        <span class="badge @(bet.Result == BetResult.WIN ? "bg-success" : bet.Result == BetResult.LOSS ? "bg-danger" : bet.Result == BetResult.PUSH ? "bg-warning" : "bg-secondary")">
                            @bet.Result.ToString()
                        </span>
                    </td>
                    <td>@bet.FormattedAmountWonLost</td>
                </tr>
            }
        </tbody>
    </table>
    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a asp-action="AllBets" asp-route-id="@profileUser?.Id" asp-route-pageNumber="@(Model.PageIndex - 1)" class="page-link">&laquo; Previous</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a asp-action="AllBets" asp-route-id="@profileUser?.Id" asp-route-pageNumber="@(Model.PageIndex + 1)" class="page-link">Next &raquo;</a>
                </li>
            }
        </ul>
    </nav>
    <a asp-action="UserProfile" asp-route-id="@profileUser?.Id" class="btn btn-link">Back to Profile</a>
</div>
